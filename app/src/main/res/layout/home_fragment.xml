<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="25dp">

    <ImageView
        android:id="@+id/home_fragment_text_view1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="0dp"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:scaleType="fitStart"
        android:src="@drawable/homepage_fragment_text1"/>

    <TextView
        android:id="@+id/home_fragment_text_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_horizontal"
        android:text="@string/home_fragment_text3"
        android:textColor="@color/white"
        android:textSize="28sp"/>

    <ImageView
        android:id="@+id/home_fragment_tips"
        android:layout_width="350dp"
        android:layout_height="320dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="60dp"
        android:padding="0dp"
        android:gravity="right"
        android:scaleType="fitEnd"
        android:src="@drawable/homepage_tips"/>



</RelativeLayout>