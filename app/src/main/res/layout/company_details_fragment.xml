<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <edu.cornellu.ecaft.ParseImageView
            android:id="@+id/company_details_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/company_details_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/company_details_logo"
            android:layout_marginLeft="8dp"
            android:text="Company"
            style="?android:listSeparatorTextViewStyle"
            android:textColor="@color/tint" />


        <TextView
            android:id="@+id/company_details_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/company_details_logo"
            android:layout_below="@id/company_details_text2"
            android:text="Google"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/company_location_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/company_details_logo"
            android:layout_below="@id/company_details_name"
            android:text="@string/company_details_fragment_header_location"
            android:backgroundTintColor="@color/black"
            style="?android:listSeparatorTextViewStyle"


        <TextView
            android:id="@+id/company_details_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_below="@id/company_location_text"
            android:layout_toRightOf="@id/company_details_logo"
            android:text="Engineering Career Fair Team App"
            android:textColor="@color/black"
            android:textSize="16sp" />



        <TextView
            android:id="@+id/company_position_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/company_details_location"
            android:layout_marginTop="10dp"
            android:text="Company Information"
            style="?android:listSeparatorTextViewStyle"
            android:background="@android:color/darker_gray"
            android:textColor="@color/tint" />


        <TextView
            android:id="@+id/company_details_majors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/company_position_text"
            android:paddingLeft="20dp"
            android:text="@string/ECaFT"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <Button
            android:id="@+id/save_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add Notes"
            android:layout_alignParentRight="true"
            android:layout_below="@id/company_details_majors"
            android:textColor="@color/black"/>

    </RelativeLayout>

</ScrollView>