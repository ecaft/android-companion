<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <edu.cornell.ecaft.ParseImageView
            android:id="@+id/company_details_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/company_details_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/company_details_logo"
            android:paddingTop="8dp"
            android:text="Google"
            android:textColor="@color/black"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/company_details_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/company_details_logo"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="Requirements"
            style="?android:listSeparatorTextViewStyle"
            android:textColor="@color/tint" />


        <TextView
            android:id="@+id/company_details_majors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/company_details_text"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:text="@string/ECaFT"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>
</ScrollView>